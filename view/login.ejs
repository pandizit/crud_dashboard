<%- include('header'); %>

<br><br><br><br>

<%- include('message2'); %>

<div class="row">
    <div class="col-md-4 col-sm-3"></div>
    <div class="col-12 col-md-4 col-sm-6 col-xs-12">

        <h2 class="text-light text-center">User Management</h2>
        <br><br>
        <form method="post" action="login" class="bg-light p-3 rounded">
            <div class="mb-3">
                <label>Username</label>
                <input type="text" class="form-control" name="username" value="<%= req.query.username %>" required/>
            </div>
            <div class="mb-3">
                <label>Password</label>
                <input type="password" class="form-control" name="password" required />
            </div>
            <button id="btnsubmit" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i> Login</button>
        </form>
        <script>
            $("form").submit(function(){
                $("#btnsubmit").addClass("disabled");
                $("#btnsubmit").attr("disabled", true);
            });
        </script>
    </div>
    <div class="col-md-4 col-sm-3"></div>
</div>

<%- include('footer'); %>